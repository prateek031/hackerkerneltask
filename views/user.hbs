<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container my-5 p-2">
      <nav
        class="w-75 d-flex justify-content-between align-items-center m-auto alert alert-warning"
      >
        <h1>
          <a class="text-decoration-none text-dark fs-4" href="/">Task Manager</a>
        </h1>
        <h2 class="w-50 d-flex justify-content-evenly">
          <a class="text-decoration-none text-dark fs-4" href="/user">User</a>
          <a class="text-decoration-none text-dark fs-4" href="/task">Task</a>
        </h2>
      </nav>
    </div>

    <div class="main my-5 p-2">
      <form action="/create" class="w-50 m-auto" method="post">
        <input
          class="w-50 form-control my-3"
          type="text"
          name="name"
          placeholder="Enter your name"
        />
        <input
          class="w-50 form-control my-3 email"
          id="email"
          type="email"
          name="email"
          placeholder="Enter your email"
        />
        <input
          class="w-50 form-control my-3"
          type="text"
          name="number"
          placeholder="Enter your number"
        />
        <button class="btn btn-success w-25">Add User</button>
      </form>

      <hr class="w-50 m-auto mt-5" />

      <div class="d-flex justify-content-between m-auto w-50 container mt-5">

        <div class="card" style="width: 18rem;">
          <div class="header">
            <h3 class="m-3">User Details</h3>
          </div>
          <ul class="list-group list-group-flush">

            {{#each user}}
              <li class="my-2 list-group-item">
                <a class="text-decoration-none text-dark" href="/task">
                  {{this.name}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>

</html>